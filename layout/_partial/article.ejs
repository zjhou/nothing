<section id="<%= post.id || ''%>">
    <% var title = post.title %>
    <% var ptn = /^poem/ %>
    <% if(ptn.exec(title)){ %>
        <% var fields = title.split(':') %>
        <% var ptitle = fields[1], author = fields[2] %>
        <div class="vertical">
            <span class="black"><%= ptitle %>ï¼¼<%= author %></span>
            <%- post.content %>
        </div>
    <% }else{ %>
        <p class="mytitle"><%= post.title %></p>
        <p class="mydate"><small><%- post.date.format(config.date_format) %></small></p>
        <div><%- post.content %></div>
    <% } %>
</section>
